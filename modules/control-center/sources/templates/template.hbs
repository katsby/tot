<div class="lock"></div>
<div class="{{#if compactView}}compact-view{{/if}} {{#if amo}}amo{{/if}} {{#if ghostery}}ghostery{{/if}}">
{{#if showSecuritySettings}}
  <header id="header" data-status="{{ generalState }}">
   {{> header }}
  </header>
  <div id="currentsite">
      <h3 class="truncate">
          {{#if isSpecialUrl}}
              <span class="dark">{{ friendlyURL }}</span>
          {{else}}
              <span class="dark">{{ domain }}</span><span>{{ extraUrl }}</span>
          {{/if}}
      </h3>
      <div class="reportsite"
           data-open-url="{{ reportSiteURL }}"
           data-target="report_url"
           data-i18n="control_center_report_url">
      </div>
  </div>

  <div id="settings" class="settings-section clearfix">
    <div id="anti-tracking"
         data-section="antitrack"
         class="antitracker setting"
         data-target="attrack">
      {{> anti-tracking}}
    </div>

    <div id="ad-blocking"
         class="adblock setting"
         data-target="adblock">
        {{> ad-blocking }}
    </div>

    <div id="anti-phising"
         data-section="antiphish"
         class="antiphishing setting"
         data-target="antiphish">
      {{> anti-phising}}
    </div>
    {{#if amo}}
      <div class="setting"
           id="cliqz-tab"
           data-section="cliqz-tab"
           data-target="cliqz-tab">
        {{> cliqz-tab module.freshtab }}
      </div>
    {{/if}}
    <div id="https"
         class="setting"
         data-section="https"
         data-target="https">
      {{> https module.https-everywhere}}
    </div>
  </div>
{{/if}}


<section id="othersettings">
    {{> other-settings }}
</section>

{{#if compactView}}
<header class="footer">
  <div class="title">
{{#if showPoweredBy}}
    <span data-i18n="control_center_footer"></span>
{{/if}}
    {{> support }}
  </div>
</header>
{{/if}}
</div>
